<!DOCTYPE html>
<html>
<head>
  <title>Your App</title>
</head>
<body>
  <h1>Welcome to You</h1>
  <p>Click the button below to get a random greeting:</p>
  <button id="getRandomGreeting">Get Random Greeting</button>
  <p id="greeting"></p>
  
  <script>
    document.getElementById('getRandomGreeting').addEventListener('click', () => {
      fetch('/api/greetings/random')
        .then(response => response.json())
        .then(data => {
          document.getElementById('greeting').innerText = data.greeting;
        })
        .catch(error => console.error('Error:', error));
    });
  </script>

    <div id="root"></div>
</body>
</html>
